                           <oasis:entry>41</oasis:entry>
                           <oasis:entry>66</oasis:entry>
                           <oasis:entry>65<xref rid="ref33" ref-type="bibr"/></oasis:entry>
                        </oasis:row>
                        <oasis:row>
                           <oasis:entry>PFS1</oasis:entry>
                           <oasis:entry>18<xref rid="t1fn1"/></oasis:entry>
