                           <oasis:entry>2.24</oasis:entry>
                        </oasis:row>
                        <oasis:row>
                           <oasis:entry>PFS2</oasis:entry>
                           <oasis:entry>18<xref rid="t1fn1"/></oasis:entry>
                           <oasis:entry>711</oasis:entry>
                           <oasis:entry>1.9</oasis:entry>
